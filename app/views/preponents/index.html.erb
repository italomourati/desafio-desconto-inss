<p style="color: green"><%= notice %></p>

<h1>Preponents</h1>

<div id="preponents">
  <table class="table table-striped table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>Name</th>
        <th>CPF</th>
        <th>Birth Date</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @preponents.each do |preponent| %>
        <tr>
          <td><%= preponent.name %></td>
          <td><%= preponent.cpf %></td>
          <td><%= preponent.birth_date %></td>
          <td><%= preponent.address %></td>
          <td>
            <%= link_to "Show", preponent, class: "btn btn-info btn-sm" %>
            <%= link_to "Edit", edit_preponent_path(preponent), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", preponent, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="btn-group" role="group" aria-label="Pagination">
    <% if @page > 1 %>
      <%= link_to 'Previous', preponents_path(page: @page - 1), class: 'btn btn-secondary btn-sm' %>
    <% else %>
      <button class="btn btn-secondary btn-sm" disabled>Previous</button>
    <% end %>

    <span class="btn btn-light btn-sm disabled">Page <%= @page %> of <%= @total_pages %></span>

    <% if @page < @total_pages %>
      <%= link_to 'Next', preponents_path(page: @page + 1), class: 'btn btn-secondary btn-sm' %>
    <% else %>
      <button class="btn btn-secondary btn-sm" disabled>Next</button>
    <% end %>
  </div>
</div>
